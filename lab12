#include <iostream>
#include <ctime>
#include <limits>
#include <cctype> 
#include <cstring>
#include <string>
#include <signal.h>
#include <errno.h>

#if defined(max)
#undef max
#endif




using namespace std;

int Check()//Check Digit
{
	string str;
	getline(cin, str);
	int d = atoi(str.c_str());
	if (d < 2 || d > 8)
		cout << "Ошибка. Повторите ввод." << endl;
	while (d < 2 || d > 8)
	{
		getline(cin, str);
		 d = atoi(str.c_str());
		 if(d < 2 || d > 8)
			 cout << "Ошибка. Повторите ввод." << endl;
	}
	return d;
}

char CheckCH()//Check Answer
{
	char i;
	cin >> i;
	if (isdigit(i))
	{
		cout << "Ошибка. Повторите ввод." << endl;
		i = CheckCH();
	}
	if (i != 'Y' && i != 'y' && i != 'n' && i != 'N')
	{
		cout << "Ошибка. Повторите ввод." << endl;
		i = CheckCH();
	}
	return i;
}


int checkin()//Check Str
{
	int l;
	l = Check();
	
	if (l < 2 || l > 8)
	{
		cout << "Ошибка. Повторите ввод." << endl;
		checkin();
	}
	return l;
}


int massive(bool fa)
{
	string str;
	int k = 0, c = 0, h = 0;
	bool f = 0, fd = 0, fs = 0;
	getline(cin,str);
	for (int i = 0; i < str.length(); i++)
		if (str[i] == ' ')
			f = 1;
	if (f == 0)
	{
		char* ch = new char[str.length()];
		for (int i = 0; i < str.length(); i++)
			ch[i] = str[i];
		h = atoi(ch);
	}
	else


	{
		f = 0;
		k = 0;
		for (int i = 0; i < str.length(); i++)
		{
			if (str[i] == ' ' && fd == 1)
			{
				k++;
				fd = 0;
				fs = 0;
			}
			else if (str[i] == ' ')
				fs = 1;
			else if (isdigit(str[i]))
				fd = 1;
			else
			{
				cout << "Ошибка. Повторите ввод." << endl;
				fa = 1;
				massive(fa);
				f = 1;
			}
		}
		if (k < 2 && f == 0)
		{
			k = 0;
			while (!isdigit(str[c]))
				c++;
			k = c;
			while (str[c] != ' ')
				h += str[c] * pow(10, c - k);
		}
	}
	if (h > 100 || h < 1)
	{
		cout << "Ошибка. Повторите ввод." << endl;
		massive(fa);
	}
	return h;
}


int main()
{
	int l, s, i, j, t;
	bool f = 0, ff = 1;
	string str;
	setlocale(LC_ALL, "rus");
	char ans;
	//Начало ввода данных
	cout << "Введите колличество строк и столбцов: ";
	l = checkin();
	s = l;
	//Создание массива
	int** m = new int* [l];
	for (int i = 0; i < l; i++)
		m[i] = new int[s];
	//Метод заполнения
	cout << "Вы хотите самостоятельно заполнить массив? Ответ: Y(Yes)/N(No)" << endl;
	ans = CheckCH();
	bool fa = 0;
	if (ans == 'Y' || ans == 'y')
	{
		cout << "Заполните массив" << endl << "Вводите элементы массива по одному" << endl << "Номер строки и столбца члена матрицы" << endl;
		for (i = 0; i < l; i++)
			for (j = 0; j < s; j++)
			{
				cout << "Стр:" << i + 1 << " Столб:" << j + 1 << " Элемент:";
				m[i][j] = massive(fa);
			}
	}
	else
	{
		srand(time(0));
		for (i = 0; i < l; i++)
			for (j = 0; j < s; j++)
				m[i][j] = rand() % 100;
	}

	//Сортировка
	while (ff == 1)
	{
		ff = 0;
		for (i = 0; i < s; i++)
			for (j = 1; j < l; j++)
				if (m[j][i] < m[j - 1][i])
				{
					t = m[j][i];
					m[j][i] = m[j - 1][i];
					m[j - 1][i] = t;
					if (j != 1)
						j--;
					ff = 1;
				}
		for (i = 1; i < s; i++)
			if (m[0][i] < m[l - 1][i - 1])
			{
				t = m[l - 1][i - 1];
				m[l - 1][i - 1] = m[0][i];
				m[0][i] = t;
				ff = 1;
			}
	}
	cout << endl << endl;
	for (i = 0; i < l; i++)//Вывод
	{
		for (j = 0; j < s; j++)
			cout << m[i][j] << " ";
		cout << endl << endl;
	}
	return 0;
}
